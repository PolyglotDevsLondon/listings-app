{
  "name": "sharespots",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "build": "webpack --mode production",
    "tslint": "tslint --project tsconfig.json --format stylish --exclude **/src/**/*.js",
    "lint": "npm run tslint",
    "dev": "webpack --mode development --watch",
    "build:docker": "docker-compose -f local.yml build",
    "update:database": "docker-compose -f local.yml run django python manage.py makemigrations",
    "load-seed-data": "docker-compose -f local.yml run django python manage.py loaddata seed_data.json",
    "dev:docker": "docker-compose -f local.yml up",
    "bootstrap": "npm run build:docker && npm run build && npm run update:database && npm run load-seed-data"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/PolyglotDevsLondon/sharespots.git"
  },
  "author": "Polyglot Devs London",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/PolyglotDevsLondon/sharespots/issues"
  },
  "homepage": "https://github.com/PolyglotDevsLondon/sharespots#readme",
  "dependencies": {
    "lodash": "^4.17.20"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.118",
    "awesome-typescript-loader": "^5.2.1",
    "browser-sync": "^2.26.5",
    "browser-sync-webpack-plugin": "^2.2.2",
    "chokidar": "^3.4.0",
    "copy-webpack-plugin": "^6.0.2",
    "css-loader": "^2.0.1",
    "node-sass": "^4.12.0",
    "sass-loader": "^7.1.0",
    "source-map-loader": "^0.2.4",
    "style-loader": "^0.23.1",
    "ts-loader": "^5.3.1",
    "tslint": "^5.11.0",
    "typescript": "^3.2.2",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12"
  }
}
